<div class="container mt-4">
  <h3 class="mb-3">Question {{index}} of {{total}}</h3>

  <p class="lead">{{question.text}}</p>

  {{#if (eq question.type "multiple-choice")}}
    <div class="d-grid gap-2">
      {{#each question.options}}
        <button class="btn btn-outline-primary answer-btn" data-answer="{{this}}">{{this}}</button>
      {{/each}}
    </div>
  {{/if}}

  {{#if (eq question.type "narrative")}}
    <input type="text" id="narrativeInput" class="form-control my-3" placeholder="Type your answer" />
    <button class="btn btn-primary" id="submitNarrative">Submit</button>
  {{/if}}

  <!-- Scoreboard -->
  <div class="scoreboard mt-4">
    <span>Score: {{score}}</span>
    <span>Time: {{elapsed}}s</span>
  </div>
</div>
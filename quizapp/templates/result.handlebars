<div class="container text-center mt-5">
  {{#if passed}}
    <h2 class="text-success">Congratulations {{studentName}}! You passed the quiz.</h2>
  {{else}}
    <h2 class="text-danger">Sorry {{studentName}}, you failed the quiz.</h2>
  {{/if}}
  <p class="mt-3 fs-5">Your score: {{score}} out of {{total}}</p>
  <div class="mt-4 d-flex justify-content-center gap-3">
    <button id="retakeBtn" class="btn btn-primary">Retake Quiz</button>
    <button id="homeBtn" class="btn btn-secondary">Back to Home</button>
  </div>
</div>
